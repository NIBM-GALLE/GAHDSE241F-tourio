<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Left Side: Vertical Progress Bar -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/lineAbove"
            android:layout_width="4dp"
            android:layout_height="32dp"
            android:background="#CCCCCC" />

        <View
            android:id="@+id/statusCircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_gray"
            android:layout_marginVertical="5dp" />

        <View
            android:id="@+id/lineBelow"
            android:layout_width="4dp"
            android:layout_height="32dp"
            android:background="#CCCCCC" />
    </LinearLayout>

    <!-- Right Side: Destination Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/destinationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/destinationNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LatLongs"
            android:textSize="14sp"
            android:textColor="#000000" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/statusTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Status: "
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit Status"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
